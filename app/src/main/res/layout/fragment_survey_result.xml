<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blueBkg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llHeaderProgress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnShare"
        android:src="@drawable/ic_share"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:src="@drawable/ic_navigation_menu_blue"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:background="@drawable/roundcorner_white"
        android:padding="1dp" />

    <LinearLayout
        android:id="@+id/header"
        android:paddingLeft="15dp"
        android:layout_below="@id/btnMenu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="30dp"
            android:text="MY RESULTS"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Here are top three results from your survey."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/blossom"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ListView
        android:id="@+id/lvCareers"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@id/header"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</RelativeLayout>